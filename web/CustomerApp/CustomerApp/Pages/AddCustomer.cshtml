@page
@model CustomerApp.Pages.AddCustomerModel
@{
    ViewData["Title"] = "Add new customer";
}
<head>

</head>
<h1>@ViewData["Title"]</h1>
<body>
    <form method="post">
        <div>
            <table>
                <tr>
                    <td>
                        <label for="customerid">Id: </label>
                    </td>
                    <td>
                        <input type="text" id="customerid" name="customerid">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="customername">Name: </label>
                    </td>
                    <td>
                        <input type="text" id="customername" name="customername" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="customersurname">Surname: </label>
                    </td>
                    <td>
                        <input type="text" id="customersurname" name="customersurname" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="customerafm">AFM: </label>
                    </td>
                    <td>
                        <input type="text" id="customerafm" name="customerafm">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="customeractive">Active: </label>
                    </td>
                    <td>
                        <input type="checkbox" id="customeractive" name="customeractive">
                    </td>
                </tr>
            </table>
        </div>
        <input type="submit" value="Add customer" asp-page-handler="AddCustomer">
        <input type="submit" value="Cancel" asp-action="Cancel" formnovalidate>
    </form>
</body>